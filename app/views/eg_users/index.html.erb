<p id="notice"><%= notice %></p>

<h1>Eg Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Encrypted password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @eg_users.each do |eg_user| %>
      <tr>
        <td><%= eg_user.name %></td>
        <td><%= eg_user.email %></td>
        <td><%= eg_user.encrypted_password %></td>
        <td><%= link_to 'Show', eg_user %></td>
        <td><%= link_to 'Edit', edit_eg_user_path(eg_user) %></td>
        <td><%= link_to 'Destroy', eg_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

